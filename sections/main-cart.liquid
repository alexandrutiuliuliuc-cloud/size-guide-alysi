{{ 'component-cart.css' | asset_url | stylesheet_tag }}

<section class="main-cart container pt-24 pb-24 sm-pb-56 sm-pt-56" data-id="{{ section.id }}">
  <div class="col-sm-max-8 m-auto cart-column">
    <header class="flex space-between vertical-bottom" style="gap: 24px;">
      <h1>{{ 'templates.cart.shopping_cart' | t }}</h1>
      <a class="link size--small" href="{{ routes.root_url }}">{{ 'general.continue_shopping' | t }}</a>
    </header>

    <form id="cart" action="{{ routes.cart_url }}" method="post">
      {%- render 'cart-items' -%}
      {%- render 'cart-shipping-notification' -%}
      <div class="flex space-between mt-40">
        {%- render 'cart-note' -%}
        {%- render 'cart-footer' -%}
      </div>
      {%- render 'cart-recommendations' -%}
    </form>
  </div>
</section>

{% schema %}
  {
    "name": "t:sections.main-cart.name"
  }
{% endschema %}