{{ 'section-image-duo-with-text.css' | asset_url | stylesheet_tag }}

{%- liquid 
  assign buttons = ''
  assign small_sizes_string = '(max-width: 767px) calc(100vw * 0.6), (max-width: 1023px) calc(100w / 4), calc(100vw / 3)' 
  assign big_sizes_string =  '(max-width: 767px) calc(100vw  * 0.6), calc(100vw * ( 5 / 12 ))'

  for block in section.blocks
    case block.type
      when 'image'
        if big_media
          assign small_media = block
        else
          assign big_media = block
        endif
      
      when 'text'
        capture text_block
          if block.settings.subtitle != blank
            echo block.settings.subtitle | prepend: '<h3 class="subheading mb-8">' | append: '</h3>'
          endif
          if block.settings.title != blank
            echo block.settings.title | prepend: '<h2 class="mb-16">' | append: '</h2>'
          endif
          if block.settings.text != blank
            echo block.settings.text | prepend: '<div class="rte mb-16">' | append: '</div>'
          endif
        endcapture

      when 'button'
        capture button_block
          render 'button', label: block.settings.button_label, link: block.settings.button_link, style: block.settings.button_style, color_scheme: section.settings.color_scheme, width: block.settings.button_width
        endcapture
        assign buttons = buttons | append: button_block
    endcase
  endfor  
-%}

{% style %}
  @media only screen and (min-width: 768px) {
    #{{ section.id }} .layout--top-left,
    #{{ section.id }} .layout--top-right{
      grid-template-rows:
        minmax(40px, auto)
        calc({{ section.settings.desktop_height }}px*0.45)
        calc({{ section.settings.desktop_height }}px*0.45)
        calc({{ section.settings.desktop_height }}px*0.1);
    }

    #{{ section.id }} .layout--bottom-left,
    #{{ section.id }} .layout--bottom-right{
      grid-template-rows:
        calc({{ section.settings.desktop_height }}px*0.1)
        calc({{ section.settings.desktop_height }}px*0.45)
        calc({{ section.settings.desktop_height }}px*0.45)
        minmax(40px, auto);
    }
  }

  @media only screen and (max-width: 767px) {
    #{{ section.id }} .media-block {
      height: {{ section.settings.mobile_height }}px;
    }
  }
{% endstyle %}

<section
  id="{{ section.id }}"
  class="image-duo-with-text container sm-down-edge-to-edge pt pb sm-pt sm-pb scrollbar--hide {{ section.settings.color_scheme }}{% if section.settings.enable_full_width %} full-width{% endif %}"
  style="
    --pt: {{ section.settings.padding_top | append: 'px' }};
    --pb: {{ section.settings.padding_bottom | append: 'px' }};
    --sm-pt: {{ section.settings.md_padding_top | append: 'px' }};
    --sm-pb: {{ section.settings.md_padding_bottom | append: 'px' }};
  ">
  <div class="image-duo-grid layout--{{ section.settings.layout }}">
    <div class="media-block media-block--big" {{ big_media.shopify_attributes }}>
      {%- if big_media.settings.link_url -%}<a class="media-link" href="{{ big_media.settings.link_url }}">{%- endif -%}
      {% if big_media.settings.media_toggle == 'show_video' %}
        {%- render 'video',
          src: big_media.settings.video_url,
          autoplay: true,
          loop: true,
          aspect_ratio: 'auto',
          lazyload: true,
          custom_classes: 'sm-br-img'
        -%}
      {% else %}
        {% render 'img',
          lazyload: true,
          src: big_media.settings.image,
          sizes: big_sizes_string,
          custom_classes: 'sm-br-img' %}
      {% endif %}
      {%- if big_media.settings.link_url -%}</a>{%- endif -%}
    </div>
    <div class="media-block media-block--small" {{ small_media.shopify_attributes }}>
      {%- if small_media.settings.link_url -%}<a class="media-link" href="{{ small_media.settings.link_url }}">{%- endif -%}
      {% if small_media.settings.media_toggle == 'show_video' %}
        {%- render 'video',
          src: small_media.settings.video_url,
          autoplay: true,
          loop: true,
          aspect_ratio: 'auto',
          lazyload: true,
          custom_classes: 'sm-br-img'
        -%}
      {% else %}
        {% render 'img',
          lazyload: true,
          src: small_media.settings.image,
          sizes: small_sizes_string,
          custom_classes: 'sm-br-img' %}
      {% endif %}
      {%- if small_media.settings.link_url -%}</a>{%- endif -%}
    </div>
    <div class="body-block {{ section.settings.mobile_alignment }} {{ section.settings.desktop_alignment }}">
      {{ text_block }}
      <div class="btn-group">{{ buttons }}</div>
    </div>
  </div>
</section>

