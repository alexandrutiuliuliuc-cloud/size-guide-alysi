{%- liquid
  assign header_layout = section.settings.header_layout | split: '__'
  assign logo_position = header_layout | first | split: '-' | last
  assign menu_position = header_layout | last | split: '-' | last
  assign overlay_handles = section.settings.overlay_handles | newline_to_br | strip_newlines | split: '<br />'

  assign header_uses_icons = section.settings.header_uses_icons
  assign search_enabled = settings.enable_search
  if shop.customer_accounts_enabled or shop.customer_accounts_optional
    assign accounts_enabled = true
  else
    assign accounts_enabled = false
  endif

  for block in section.blocks
    assign content_menu_titles = content_menu_titles | append: ',' | append: block.settings.menu_parent
  endfor
  assign content_menu_titles = content_menu_titles | remove_first: ',' | split: ',' | uniq
-%}

{%- capture logo_element -%}
  {%- liquid
    assign logo_type = false
    assign logo_light = false
    assign logo_dark = false
    assign logo_width = false
    assign logo_url = false
    assign overlay_header = false

    if template.name == 'index' and section.settings.overlay_index
      assign overlay_header = true
    elsif template.name == 'collection' and section.settings.overlay_collection
      assign overlay_header = true
    elsif overlay_handles contains handle 
      assign overlay_header = true
    endif


    if section.settings.svg_logo_light != blank or section.settings.svg_logo_dark != blank
      assign logo_type = 'vector'
      assign logo_light = section.settings.svg_logo_light
      assign logo_dark = section.settings.svg_logo_dark 
    elsif section.settings.logo_light != blank or section.settings.logo_dark != blank
      assign logo_type = 'image'
      assign logo_light = section.settings.logo_light
      assign logo_dark = section.settings.logo_dark 
    endif

    if logo_light == blank and logo_dark != blank
      assign logo_light = logo_dark
    elsif logo_light != blank and logo_dark == blank
      assign logo_dark = logo_light
    endif
    
    assign logo_width = section.settings.logo_max_width
    assign logo_width_desktop = section.settings.logo_max_width_desktop

    if logo_type == 'image'
      if logo_width < logo_width_desktop
        assign bigger_logo_width = logo_width_desktop
      else
        assign bigger_logo_width = logo_width
      endif
      assign logo_url = bigger_logo_width | times: 2 | append: 'x'
      assign logo_dark_height = bigger_logo_width | divided_by: logo_dark.aspect_ratio | round
      assign logo_light_height = bigger_logo_width | divided_by: logo_light.aspect_ratio | round
    elsif logo_type == 'svg'
      unless logo_dark contains '<svg' or logo_light contains '<svg'
        assign logo_type = 'text'
      endunless
    endif

    assign background_lightness = settings.header_background | color_extract: 'lightness'
    if background_lightness > 60
      assign header_lightness_class = 'is-light-background'
    else
      assign header_lightness_class = 'is-dark-background'
    endif

    if overlay_header
      assign overlay_lightness_class = section.settings.overlay_text_color | prepend: 'overlay-'
    endif

    assign enable_drawer_menu = false
    assign shortcut_menu = linklists[section.settings.drawer_menu.handle]

    if shortcut_menu != empty
      if shortcut_menu.links.size > section.settings.shortcut_limit
        assign enable_drawer_menu = true
      elsif shortcut_menu.levels > 1
        assign enable_drawer_menu = true
      else
        for menu_item in shortcut_menu.links
          if content_menu_titles contains menu_item.title
            assign enable_drawer_menu = true
            break
          endif
        endfor
      endif
    endif
    
    if section.settings.drawer_secondary_menu != blank
      assign enable_drawer_menu = true
    endif
  -%}

<style type="text/css">
  .header-logo > * {
    margin-top: {{ section.settings.logo_padding | append: 'px;' }};
    margin-bottom: {{ section.settings.logo_padding | append: 'px;' }};
  }
  @media only screen and (min-width:768px) {
   .header-logo > * {
      margin-top: {{ section.settings.logo_padding_desktop | append: 'px;' }};
      margin-bottom: {{ section.settings.logo_padding_desktop | append: 'px;' }};
    } 
  }
</style>

  <a class="header-logo custom-header-logo" href="{{ routes.root_url }}" style=" --logo-width: {{ logo_width | append: 'px' }}; --sm-logo-width: {{ logo_width_desktop | append: 'px' }};">
    {%- if logo_type == 'image' -%}
      <img class="site-logo for-dark-backgrounds --image" width="{{ bigger_logo_width }}" height="{{ logo_light_height }}" src="{{ logo_light | img_url: logo_url }}" alt="{{ shop.name }}"/>
      <img class="site-logo for-light-backgrounds --image" width="{{ bigger_logo_width }}" height="{{ logo_dark_height }}" src="{{ logo_dark | img_url: logo_url }}" alt="{{ shop.name }}"/>
    {%- elsif logo_type == 'vector' -%}
      {%- assign logo_light = logo_light | replace: 'script', '' -%}
      {%- assign logo_dark = logo_dark | replace: 'script', '' -%}
      <div class="site-logo for-dark-backgrounds --svg">
        {{ logo_light }}
        <span class="visually-hidden">{{ shop.name }}</span>
      </div>
      <div class="site-logo for-light-backgrounds --svg">
        {{ logo_dark }}
        <span class="visually-hidden">{{ shop.name }}</span>
      </div>
    {%- else -%}
      <h1 class="site-logo --text">{{ shop.name }}</h1>
    {%- endif -%}
  </a>
{%- endcapture -%}

