{% liquid
  # Snippet for Gridy Slider
  # - contains the Arrows HTML
%}
<style>
  .product-media-slider .custom-main-product-arrows {
     visibility: hidden;
   }
</style>
<div class="gridy-arrows flex space-between {{ class }} custom-main-product-arrows">
  <button
    class="btn btn--primary btn--with-icon btn--round gridy-arrow flex"
    type="button"
    data-gridy-arrow
    data-direction="prev"
  >
    {% render 'icon-chevron-left' -%}
    <span class="visually-hidden">{{ 'general.slider.previous_slide' | t }}</span>
  </button>
  <button
    class="btn btn--primary btn--with-icon btn--round gridy-arrow flex"
    type="button"
    data-gridy-arrow
    data-direction="next"
  >
    {% render 'icon-chevron-right' -%}
    <span class="visually-hidden">{{ 'general.slider.next_slide' | t }}</span>
  </button>
</div>
